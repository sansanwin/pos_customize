<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_pos_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.inherited</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
             <xpath expr="//group[@name='order_fields']" position="inside">
                <field name="delivery_address" invisible="1"></field>
                <field name="delivery_date"></field>
                <field name="delivery_address"></field>
             </xpath>
        </field>
    </record>

    <record id="view_pos_order_tree_inherit" model="ir.ui.view">
        <field name="name">pos.order.inherited</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
           <field name="pos_reference" position="after">
               <field name="delivery_date"></field>
               <field name="delivery_address"></field>
           </field>
        </field>
    </record>
</odoo>